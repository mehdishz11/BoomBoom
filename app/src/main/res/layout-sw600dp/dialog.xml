<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_parent"
    android:layout_width="400dp"
    android:layout_height="250dp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_save"
        android:layout_below="@+id/rel_title"
        android:layout_marginBottom="-25dp"
        android:layout_marginRight="@dimen/space_normal"
        android:layout_marginTop="-36dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_dialog_bgr_pich" />

    <LinearLayout
        android:id="@+id/rel_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_save"
        android:layout_below="@+id/rel_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="-20dp"
        android:layout_toLeftOf="@+id/img_btn_close"
        android:padding="@dimen/space_small"
        android:orientation="horizontal"
        >
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_handle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/handle" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <psb.com.cview.CustomTextViewBold
                android:id="@+id/text_title_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/settings"
                android:textColor="#7ca331"
                android:scaleY="1.1"
                android:scaleX="1.0"
                android:textSize="20sp"
                android:paddingBottom="@dimen/space_small"
                />

            <psb.com.cview.CustomTextViewBold
                android:id="@+id/text_title_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/settings"
                android:textColor="@color/white_1"
                android:textSize="20sp"
                android:paddingBottom="@dimen/space_small"/>
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/space_normal"
        android:paddingBottom="@dimen/space_small"
        android:paddingLeft="@dimen/space_small"
        android:paddingTop="@dimen/space_small"
        android:src="@drawable/btn_close" />

    <psb.com.cview.CButton
        android:id="@+id/btn_save"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_rect"
        android:paddingBottom="@dimen/space_small"
        android:text="ذخیره"
        android:textColor="@color/white_1"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>