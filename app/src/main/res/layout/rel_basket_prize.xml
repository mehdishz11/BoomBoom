<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rel_prize_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_prize_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:rotation="-15"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/text_prize_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/brown_3"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:id="@+id/image_prize_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/text_prize_2"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_prize_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:layout_toRightOf="@+id/card_prize_2"
            app:cardElevation="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:rotation="10"
            android:visibility="invisible"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/text_prize_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/brown_3"
                    android:textSize="@dimen/text_size_normal"
                    android:lines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/image_prize_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/text_prize_3"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_prize_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="11dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:visibility="invisible"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/text_prize_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/brown_3"
                    android:textSize="@dimen/text_size_normal"
                    android:lines="1"
                    android:ellipsize="end"
                    />

                <ImageView
                    android:id="@+id/image_prize_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/text_prize_1"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_basket"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignRight="@+id/rel_prize_details"
        android:layout_alignLeft="@+id/rel_prize_details"
        android:layout_below="@+id/rel_prize_details"
        android:src="@drawable/img_basket"
        android:layout_marginTop="-35dp"
        android:scaleType="fitXY"
        android:elevation="11dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/img_basket"
        android:layout_alignLeft="@+id/img_basket"
        android:layout_alignTop="@+id/img_basket"
        android:layout_alignBottom="@+id/img_basket"
        android:elevation="12dp"
        >

        <psb.com.cview.CustomTextViewBold
            android:id="@+id/text_title_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="@dimen/space_small"
            android:scaleX="1.0"
            android:scaleY="1.1"
            android:text="@string/prizes"
            android:textColor="@color/brown_3"
            android:textSize="20sp" />

        <psb.com.cview.CustomTextViewBold
            android:id="@+id/text_title_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="@dimen/space_small"
            android:text="@string/prizes"
            android:textColor="@color/brown_1"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>