<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layoutDirection="ltr">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:id="@+id/lnr_texts"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >

            <ir.dorsa.totalpayment.customView.CTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/md_green_A700"
                android:textSize="@dimen/text_size_large"
                android:text="نقاشی با استیکر !"
                />
            <ir.dorsa.totalpayment.customView.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/md_green_A700"
                android:layout_gravity="right"
                android:text="@string/intro_0_msg"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lnr_texts"
            android:layout_marginLeft="40dp"
            android:src="@drawable/img_intro_0"
            />

    </RelativeLayout>

</RelativeLayout>