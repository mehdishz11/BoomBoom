                                android:scaleType="centerCrop" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <psb.com.customView.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_prize_2"
                        android:layout_centerHorizontal="true"
                        android:text="@string/second_place_prize"
                        android:textColor="@color/brown_3"
                        android:textSize="@dimen/text_size_normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_prize_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_too_large">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_prize_1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <psb.com.customView.CustomTextViewBold
                                android:id="@+id/text_prize_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textColor="@color/brown_3"
                                android:textSize="@dimen/text_size_normal" />

                            <ImageView
                                android:id="@+id/image_prize_1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_below="@+id/text_prize_1"
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <psb.com.customView.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_prize_1"
                        android:layout_centerHorizontal="true"
                        android:text="@string/first_place_prize"
                        android:textColor="@color/brown_3"
                        android:textSize="@dimen/text_size_normal" />

                </RelativeLayout>

            </LinearLayout>
        </HorizontalScrollView>



    </RelativeLayout>

</RelativeLayout>