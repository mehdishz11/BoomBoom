<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    android:clickable="true"
    android:layoutDirection="ltr">


    <!--header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/clouds" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/clouds"
                android:scaleX="-1" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/sun_glow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sun_glow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sun_center" />
        </RelativeLayout>

        <!--exit-->
        <psb.com.cview.IconButton
            android:id="@+id/back"
            android:layout_width="@dimen/btn_size_sqr"
            android:layout_height="@dimen/btn_size_sqr"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_sqr_green"
            android:paddingRight="3dp"
            android:paddingBottom="2dp"
            android:text="î¤–"
            android:layout_margin="@dimen/space_small"
            android:textColor="@color/white_1"
            android:textSize="18dp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_footer"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/img_grass_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/grass_7" />


        <ImageView
            android:id="@+id/img_grass_2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/grass_8" />

    </RelativeLayout>



    <ImageView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-100dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/tree" />

    <!--footer-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/lion"
                android:layout_width="68dp"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-20dp"
                android:layout_marginBottom="50dp"
                android:scaleType="fitStart"
                android:src="@drawable/lion" />

            <ImageView
                android:id="@+id/tree_1"
                android:layout_width="70dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:scaleType="fitStart"
                android:src="@drawable/tree_trunk" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_grass_5"
            android:layout_width="110dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-20dp"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_1" />

        <ImageView
            android:id="@+id/img_grass_4"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-20dp"
            android:layout_toRightOf="@+id/img_grass_3"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_3" />

        <ImageView
            android:id="@+id/img_grass_3"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-20dp"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_2" />

        <ImageView
            android:id="@+id/img_grass_8"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-50dp"
            android:layout_marginBottom="-10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_1" />


        <ImageView
            android:id="@+id/chicken"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:scaleX="-1"
            android:src="@drawable/chicken" />

    </RelativeLayout>

    <ir.dorsa.totalpayment.customView.ViewPagerIndicator
        android:id = "@+id/view_pager_indicator"
        android:layout_width = "wrap_content"
        android:layout_height = "20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:delimiterSize = "8dp"
        app:itemTint="@color/white"
        app:itemSelectedTint="@color/white"
        app:itemScale = "3"
        />

    <!--enter-->
    <RelativeLayout
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_normal"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_rect"
            >
            <ir.dorsa.totalpayment.customView.CTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

    </RelativeLayout>

    <!--right grass-->
    <ImageView
        android:id="@+id/img_grass_7"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/grass_5" />

    <ImageView
        android:id="@+id/rooster"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitEnd"
        android:src="@drawable/hen" />

    <ImageView
        android:id="@+id/img_grass_6"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="-10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/grass_4" />


</RelativeLayout>



