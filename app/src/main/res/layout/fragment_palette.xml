            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_small"
            android:layout_marginRight="@dimen/space_small"
            android:orientation="horizontal"
            android:weightSum="12">
            <!--color-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <psb.com.paintingview.CircleColorPicker
                    android:id="@+id/color_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:colorResource="@color/palette_color_0"
                    app:imageResource="@drawable/color_1"></psb.com.paintingview.CircleColorPicker>
            </RelativeLayout>

            <!--color-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <psb.com.paintingview.CircleColorPicker
                    android:id="@+id/color_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:colorResource="@color/palette_color_1"
                    app:imageResource="@drawable/color_2"></psb.com.paintingview.CircleColorPicker>

            </RelativeLayout>

            <!--color-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <psb.com.paintingview.CircleColorPicker
                    android:id="@+id/color_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:colorResource="@color/palette_color_2"
                    app:imageResource="@drawable/color_3"></psb.com.paintingview.CircleColorPicker>

            </RelativeLayout>

            <!--color-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <psb.com.paintingview.CircleColorPicker
                    android:id="@+id/color_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:colorResource="@color/palette_color_3"
                    app:imageResource="@drawable/color_4"></psb.com.paintingview.CircleColorPicker>

            </RelativeLayout>

            <!--color-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <psb.com.paintingview.CircleColorPicker
                    android:id="@+id/color_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:colorResource="@color/palette_color_4"
                    app:imageResource="@drawable/color_5"></psb.com.paintingview.CircleColorPicker>

            </RelativeLayout>

            <!--color-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <psb.com.paintingview.CircleColorPicker
                    android:id="@+id/color_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:colorResource="@color/palette_color_5"
                    app:imageResource="@drawable/color_6"></psb.com.paintingview.CircleColorPicker>

            </RelativeLayout>

            <!--color-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <psb.com.paintingview.CircleColorPicker
                    android:id="@+id/color_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:colorResource="@color/palette_color_6"
                    app:imageResource="@drawable/color_8"></psb.com.paintingview.CircleColorPicker>


            </RelativeLayout>

