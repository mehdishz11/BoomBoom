            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <psb.com.paintingview.CircleColorPicker
                    android:id="@+id/color_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:colorResource="@color/palette_color_7"
                    app:imageResource="@drawable/color_10"></psb.com.paintingview.CircleColorPicker>

            </RelativeLayout>

