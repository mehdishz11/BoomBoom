<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_3">

    <ImageView
        android:id="@+id/image_cloud_top_4"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitEnd"
        android:src="@drawable/could_top_4" />

    <ImageView
        android:id="@+id/image_cloud_top_2"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/could_top_2" />


    <ImageView
        android:id="@+id/image_cloud_top_1"
        android:layout_width="98dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/could_top_1" />


    <ImageView
        android:id="@+id/image_cloud_2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cloud_2" />

    <ImageView
        android:id="@+id/image_sun"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sun" />

    <ImageView
        android:id="@+id/image_cloud_top_3"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:src="@drawable/could_top_3" />

    <ImageView
        android:id="@+id/image_cloud_1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cloud_1" />
</RelativeLayout>