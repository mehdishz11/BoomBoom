<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".home.HomeActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bgr_podium"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.9">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ribbon"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/fire_stars"
                        />

                    <ImageView
                        android:id="@+id/btn_more"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_small"
                        android:src="@drawable/btn_more" />




                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/img_podium"
                            android:layout_width="200dp"
                            android:layout_height="90dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/podium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@id/img_podium"
                            android:layout_marginBottom="-40dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="30">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="15dp"
                                    android:rotation="-10"
                                    android:src="@drawable/temp_kid_1" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="45">

                                <ImageView
                                    android:id="@+id/img_winner_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="34dp"
                                    android:paddingRight="10dp"
                                    android:src="@drawable/temp_kid_2" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="3dp"
                                    android:layout_marginRight="5dp"
                                    android:rotation="10"
                                    android:src="@drawable/temp_kid_3" />
                            </RelativeLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/crown"
                            android:rotation="-40"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="65dp"


                            />
                    </RelativeLayout>


                </RelativeLayout>
            </android.support.design.widget.CollapsingToolbarLayout>


            <RelativeLayout
                android:id="@+id/rel_tabs"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#00cde8"
                app:layout_scrollFlags="enterAlways">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/tab_bgr" />

                <psb.com.cview.CButton
                    android:id="@+id/btn_history"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_rectangle_toolbar_half"
                    android:rotation="5"
                    android:text="@string/notebook"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/text_size_normal" />

                <psb.com.cview.CButton
                    android:id="@+id/competition"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/btn_circle_toolbar_half" />

                <psb.com.cview.CButton
                    android:id="@+id/btn_new_painting"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_rectangle_toolbar_half"
                    android:rotation="-8"
                    android:text="نقاشی جدید"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/text_size_normal" />

            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>


    <ImageView
        android:id="@+id/lion"
        android:layout_width="98dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="-20dp"
        android:scaleType="fitStart"
        android:src="@drawable/lion" />

    <ImageView
        android:id="@+id/tree_1"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:scaleType="fitStart"
        android:src="@drawable/tree_trunk" />

    <RelativeLayout
        android:id="@+id/view_footer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/img_grass_1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/grass_7" />


        <ImageView
            android:id="@+id/img_grass_2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/grass_8" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/bunny" />


        <ImageView
            android:id="@+id/img_grass_5"
            android:layout_width="130dp"
            android:layout_height="92dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-20dp"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_1" />

        <ImageView
            android:id="@+id/img_grass_4"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-20dp"
            android:layout_toRightOf="@+id/img_grass_3"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_3" />

        <ImageView
            android:id="@+id/img_grass_3"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-20dp"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_2" />

        <ImageView
            android:id="@+id/img_grass_8"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-10dp"
            android:layout_marginRight="-50dp"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_1" />


        <ImageView
            android:id="@+id/img_grass_7"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-10dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_5" />

        <ImageView
            android:id="@+id/rooster"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:scaleType="fitEnd"
            android:src="@drawable/hen" />

        <ImageView
            android:id="@+id/img_grass_6"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="-20dp"
            android:scaleType="fitEnd"
            android:src="@drawable/grass_4" />

        <ImageView
            android:id="@+id/chicken"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/img_grass_6"
            android:scaleType="fitCenter"
            android:src="@drawable/chicken" />

    </RelativeLayout>


</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_status_bar"
            android:background="@color/light_level_0">

            <RelativeLayout
                android:id="@+id/drawer_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/act_user_image"
                    android:layout_marginBottom="45dp"
                    android:background="@color/colorPrimary"
                    android:scaleType="centerCrop" />


                <psb.com.cview.IconFont
                    android:id="@+id/act_sign_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_5"
                    android:padding="@dimen/margin_10"
                    android:text=""
                    android:textColor="@color/light_level_0"
                    android:textSize="20dp" />

                <psb.com.cview.CustomTextView
                    android:id="@+id/text_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reg_or_login"
                    android:layout_centerHorizontal="true"
                    android:text="ویرایش"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_size_14" />

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/reg_or_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/act_user_image"
                    android:layout_marginTop="@dimen/margin_10"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="ثبت نام | ورود"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/act_user_image"
                    android:layout_alignLeft="@+id/act_user_image"
                    android:layout_alignRight="@+id/act_user_image"
                    android:layout_alignTop="@+id/act_user_image"
                    android:background="@drawable/circle_red" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/act_user_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:padding="5dp"
                    android:src="@drawable/user_empty_gray"
                    android:tint="@color/light_level_0"
                    app:riv_corner_radius="40dp" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/drawer_top_layout"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/drawer_top_layout"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/ManageAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <psb.com.cview.CustomTextViewLight
                            android:id="@+id/textView17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/imageButton4"
                            android:gravity="right|center"
                            android:text="نقاشی های من"
                            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/font_size_14" />

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/margin_10"
                            android:id="@+id/imageButton4"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
