<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    tools:context=".competition.ActivityCompetition">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#00cde8">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_normal"
                android:scaleX="-1"
                android:src="@drawable/img_icon_right_arrow" />

            <psb.com.cview.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_normal"
                android:text="رقابت ها"
                android:textColor="@color/white_1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_top"
            android:layout_marginTop="-25dp"
            android:elevation="1dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bottom_view"
                android:layout_marginLeft="-100dp"
                android:layout_marginRight="-100dp"
                android:background="@drawable/circle_arc" />

            <View
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/space_normal"
                android:layout_marginTop="20dp"
                android:alpha="0.5"
                android:background="@drawable/circle_white"
                android:rotation="55" />

            <View
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:alpha="0.5"
                android:background="@drawable/circle_white"
                android:rotation="70" />


            <psb.com.cview.CustomTextViewBold
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_user_image"
                android:layout_centerHorizontal="true"
                android:text="مهدی شجاعیان"
                android:textColor="@color/brown_3"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rel_user_image"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_normal"
                android:background="@drawable/bgr_color_picker">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/circle_gradient" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/temp_kid_1"
                        app:riv_corner_radius="40dp" />


                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_user_name"
                android:layout_centerHorizontal="true">

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/text_competition"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/space_small"
                    android:background="@drawable/pallet_drop"
                    android:gravity="center"
                    android:text="رده بندی"
                    android:textColor="@color/brown_3" />

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/text_All"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/space_small"
                    android:layout_marginTop="@dimen/space_small"
                    android:layout_toRightOf="@+id/text_competition"
                    android:gravity="center"
                    android:text="نقاشی همه"
                    android:textColor="@color/brown_2" />

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/text_me"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/space_small"
                    android:layout_marginTop="@dimen/space_small"
                    android:layout_toLeftOf="@+id/text_competition"
                    android:gravity="center"
                    android:text="نقاشی من"
                    android:textColor="@color/brown_2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/rel_tabs"></RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/grass"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/rel_user_info"
            android:layout_marginTop="-25dp"
            android:background="@drawable/clouds" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-10dp"
            android:scaleType="fitXY"
            android:src="@drawable/grass_11"
            />
        <RelativeLayout
            android:id="@+id/rel_animals"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-40dp">

            <ImageView
                android:id="@+id/img_animal_1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:scaleType="fitStart"
                android:src="@drawable/animal_2" />
            <ImageView
                android:id="@+id/img_animal_2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:layout_toRightOf="@id/img_animal_1"
                android:src="@drawable/animal_4" />

            <ImageView
                android:id="@+id/img_animal_3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:layout_centerHorizontal="true"
                android:src="@drawable/animal_3" />

            <ImageView
                android:id="@+id/img_animal_4"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:scaleType="fitStart"
                android:src="@drawable/animal_1" />
            <ImageView
                android:id="@+id/img_animal_5"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:layout_toLeftOf="@id/img_animal_4"
                android:src="@drawable/animal_5" />
        </RelativeLayout>





    </RelativeLayout>

