<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/white_1"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:layoutDirection="ltr"
    tools:context=".home.HomeActivity"
    tools:openDrawer="left">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--header-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/clouds" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/clouds" />
            </LinearLayout>

            <View
                android:id="@+id/view_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_50"
                android:layout_marginTop="-35dp"
                android:background="@drawable/could_top_1" />

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/view_1"
                android:background="@drawable/sun" />

            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-45dp"
                android:background="@drawable/could_top_1" />

            <View
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-15dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/could_top_1" />

        </RelativeLayout>
        <ImageView
            android:layout_width="200dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/tree"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="-100dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:padding="@dimen/space_small"
            android:src="@drawable/btn_more" />
        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/space_small"
            android:src="@drawable/btn_settings" />


        <!--competition-->
        <RelativeLayout
            android:id="@+id/rel_competition"
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:rotation="-3"
            android:layout_toLeftOf="@+id/btn_more"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="@dimen/margin_10">

            <RelativeLayout
                android:id="@+id/rel_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/btn_save"
                    android:layout_below="@+id/rel_title"
                    android:layout_marginRight="@dimen/space_normal"
                    android:layout_marginTop="-23dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bgr_podium"

                    app:riv_corner_radius="13dp" />

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/space_small"
                    android:layout_marginTop="45dp">

                    <ImageView
                        android:id="@+id/img_podium"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/podium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/img_podium"
                        android:layout_marginBottom="-35dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:rotation="-10"
                                android:src="@color/white_1"
                                app:riv_border_color="@color/White"
                                app:riv_corner_radius="10dp" />

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:paddingBottom="3dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:paddingTop="3dp"
                                android:rotation="-10"
                                android:src="@drawable/user_profile"
                                app:riv_border_color="@color/White"
                                app:riv_corner_radius="10dp" />

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_winner_2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:rotation="-10"
                                app:riv_border_color="@color/White"
                                app:riv_corner_radius="10dp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="45">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="25dp"
                                android:paddingRight="10dp"
                                android:src="@color/white_1"
                                app:riv_border_color="@color/White"
                                app:riv_corner_radius="10dp" />

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="24dp"
                                android:paddingBottom="5dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="15dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/user_profile"
                                app:riv_border_color="@color/White"
                                app:riv_corner_radius="10dp" />

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_winner_1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="34dp"
                                android:paddingRight="10dp"
                                app:riv_border_color="@color/White"
                                app:riv_corner_radius="10dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="25">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="3dp"
                                android:layout_marginRight="5dp"
                                android:rotation="10"
                                android:src="@color/white_1"

                                app:riv_border_color="@color/white_1"
                                app:riv_corner_radius="10dp" />

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="3dp"
                                android:layout_marginRight="5dp"
                                android:paddingBottom="3dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:paddingTop="3dp"
                                android:rotation="10"
                                android:src="@drawable/user_profile"
                                app:riv_border_color="@color/white_1"
                                app:riv_corner_radius="10dp" />

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_winner_3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="3dp"
                                android:layout_marginRight="5dp"
                                android:rotation="10"
                                app:riv_border_color="@color/white_1"
                                app:riv_corner_radius="10dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="0dp"
                        android:rotation="-40"
                        android:src="@drawable/crown" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_title"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/img_handle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/handle" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <psb.com.cview.CustomTextViewBold
                            android:id="@+id/text_title_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:paddingBottom="@dimen/space_small"
                            android:scaleX="1.0"
                            android:scaleY="1.1"
                            android:text="@string/competition"
                            android:textColor="#7ca331"
                            android:textSize="14sp" />

                        <psb.com.cview.CustomTextViewBold
                            android:id="@+id/text_title_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:paddingBottom="@dimen/space_small"
                            android:text="@string/competition"
                            android:textColor="@color/white_1"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/rel_title"
                    android:background="@drawable/img_color_white" />

                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/rel_title"
                    android:background="@drawable/img_color_white" />


            </RelativeLayout>
        </RelativeLayout>

        <!--user-->

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rel_competition"
            android:layout_marginRight="65dp"
            android:layout_width="200dp"
            android:padding="@dimen/margin_10"

            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_dialog_bgr" />

            <psb.com.cview.CustomTextView
                android:id="@+id/text_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_or_login"
                android:layout_toLeftOf="@+id/act_user_image"
                android:layout_marginRight="@dimen/margin_20"

                android:layout_centerHorizontal="true"
                android:text="(ویرایش)"
                android:textColor="@color/blue_3"
                android:textSize="@dimen/font_size_11" />

            <psb.com.cview.CustomTextViewBold
                android:id="@+id/reg_or_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/act_user_image"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:clickable="true"
                android:gravity="right|center"
                android:text="ثبت نام | ورود"
                android:textColor="@color/blue_3"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/font_size_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/act_user_image"
                android:layout_alignLeft="@+id/act_user_image"
                android:layout_alignRight="@+id/act_user_image"
                android:layout_alignTop="@+id/act_user_image"
                android:background="@drawable/circle_blue" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/act_user_image"
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@drawable/user_empty_gray"
                android:tint="@color/light_level_0"
                app:riv_corner_radius="40dp" />


        </RelativeLayout>


        <!--footer-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/lion"
                    android:layout_width="68dp"
                    android:layout_height="110dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="-20dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/lion" />

                <ImageView
                    android:id="@+id/tree_1"
                    android:layout_width="70dp"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="50dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/tree_trunk" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/view_footer"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/img_grass_1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grass_7" />


                <ImageView
                    android:id="@+id/img_grass_2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grass_8" />


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="65dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/bunny" />


                <ImageView
                    android:id="@+id/img_grass_5"
                    android:layout_width="110dp"
                    android:layout_height="72dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="-20dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/grass_1" />

                <ImageView
                    android:id="@+id/img_grass_4"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="-20dp"
                    android:layout_toRightOf="@+id/img_grass_3"
                    android:scaleType="fitEnd"
                    android:src="@drawable/grass_3" />

                <ImageView
                    android:id="@+id/img_grass_3"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="-20dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/grass_2" />

                <ImageView
                    android:id="@+id/img_grass_8"
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginRight="-50dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/grass_1" />


                <ImageView
                    android:id="@+id/img_grass_7"
                    android:layout_width="140dp"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/grass_5" />

                <ImageView
                    android:id="@+id/rooster"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="30dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/hen" />

                <ImageView
                    android:id="@+id/img_grass_6"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginLeft="-20dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/grass_4" />

                <ImageView
                    android:id="@+id/chicken"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/img_grass_6"
                    android:scaleType="fitCenter"
                    android:src="@drawable/chicken" />

            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayoutSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/colorPrimary">

        <include layout="@layout/rel_navigation_view" />

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
