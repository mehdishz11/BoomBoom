    <!--prize-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="-5dp"
        android:layout_toLeftOf="@+id/rel_parent_competition"
        android:layout_toRightOf="@+id/basket_prize"
        android:scaleType="fitXY"
        android:src="@drawable/img_arrow" />

    <psb.com.kidpaint.utils.customView.BasketPrize
        android:id="@+id/basket_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!--competition-->
    <RelativeLayout
        android:id="@+id/rel_parent_competition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-30dp"
        android:layout_marginBottom="-10dp"
        android:clickable="true"
        android:rotation="10">
        <!--base-->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/sign_base" />
        <!--competition-->
        <RelativeLayout
            android:id="@+id/rel_competition"
            android:layout_width="220dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">


            <RelativeLayout
                android:id="@+id/rel_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/btn_save">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sign_big"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/space_normal">


                        <RelativeLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/space_small">

                            <ImageView
                                android:id="@+id/img_podium"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/podium" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_above="@id/img_podium"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="-35dp"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="30">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="15dp"
                                        android:rotation="-10"
                                        android:src="@color/white_1"
                                        app:riv_border_color="@color/White"
                                        app:riv_corner_radius="10dp" />

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="15dp"
                                        android:paddingLeft="3dp"
                                        android:paddingTop="3dp"
                                        android:paddingRight="3dp"
                                        android:paddingBottom="3dp"
                                        android:rotation="-10"
                                        android:src="@drawable/user_profile"
                                        app:riv_border_color="@color/White"
                                        app:riv_corner_radius="10dp" />

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/img_winner_2"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="15dp"
                                        android:rotation="-10"
                                        app:riv_border_color="@color/White"
                                        app:riv_corner_radius="10dp" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="45">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="25dp"
                                        android:paddingRight="10dp"
                                        android:src="@color/white_1"
                                        app:riv_border_color="@color/White"
                                        app:riv_corner_radius="10dp" />

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="25dp"
                                        android:paddingRight="10dp"
                                        android:paddingBottom="5dp"
                                        android:src="@drawable/user_profile"
                                        app:riv_border_color="@color/White"
                                        app:riv_corner_radius="10dp" />

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/img_winner_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="25dp"
                                        android:paddingRight="10dp"
                                        app:riv_border_color="@color/White"
                                        app:riv_corner_radius="10dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="25">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="3dp"
                                        android:rotation="10"
                                        android:src="@color/white_1"

                                        app:riv_border_color="@color/white_1"
                                        app:riv_corner_radius="10dp" />

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="3dp"
                                        android:paddingLeft="3dp"
                                        android:paddingTop="3dp"
                                        android:paddingRight="3dp"
                                        android:paddingBottom="3dp"
                                        android:rotation="10"
                                        android:src="@drawable/user_profile"
                                        app:riv_border_color="@color/white_1"
                                        app:riv_corner_radius="10dp" />

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/img_winner_3"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginBottom="3dp"
                                        android:rotation="10"
                                        app:riv_border_color="@color/white_1"
                                        app:riv_corner_radius="10dp" />
                                </RelativeLayout>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="0dp"
                                android:rotation="-40"
                                android:src="@drawable/crown" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!--start-->
        <RelativeLayout
            android:id="@+id/rel_compatition"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/rel_competition"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/sign_right" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/text_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/space_small"
                    android:scaleX="1.0"
                    android:scaleY="1.1"
                    android:text="@string/competition"
                    android:textColor="@color/brown_3"
                    android:textSize="25sp" />

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/text_title_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/space_small"
                    android:text="@string/competition"
                    android:textColor="@color/white_1"
                    android:textSize="25sp" />
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/img_owl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/rel_parent_competition"
        android:layout_alignLeft="@+id/rel_parent_competition"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-15dp"
        android:src="@drawable/owl" />

    <!--right grass-->
    <ImageView
        android:id="@+id/img_grass_7"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/grass_5" />

    <ImageView
        android:id="@+id/rooster"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitEnd"
        android:src="@drawable/hen" />

    <ImageView
        android:id="@+id/img_grass_6"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="-10dp"
        android:scaleType="fitEnd"
        android:src="@drawable/grass_4" />

    <FrameLayout
        android:id="@+id/frameLayoutSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:visibility="visible" />

    <View
        android:id="@+id/ViewCenter"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/bunnySound"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>



