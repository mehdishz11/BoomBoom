<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_parent"
    android:layout_width="300dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:layoutDirection="ltr"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button3"
        android:layout_below="@+id/rel_title"
        android:layout_marginBottom="-25dp"
        android:layout_marginRight="@dimen/space_normal"
        android:layout_marginTop="-36dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_dialog_bgr_pich" />

    <psb.com.customView.CustomTextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rel_btns"
        android:layout_below="@+id/rel_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="@dimen/space_small"
        android:orientation="horizontal"
        android:textColor="@color/brown_3"
        android:gravity="center"
        android:textSize="@dimen/text_size_normal"
        />

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_handle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/handle" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <psb.com.customView.CustomTextViewBold
                android:id="@+id/text_title_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="ورود"
                android:textColor="#7ca331"
                android:scaleY="1.1"
                android:scaleX="1.0"
                android:textSize="14sp"
                android:paddingBottom="@dimen/space_small"
                />

            <psb.com.customView.CustomTextViewBold
                android:id="@+id/text_title_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="ورود"
                android:textColor="@color/white_1"
                android:textSize="14sp"
                android:paddingBottom="@dimen/space_small"/>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button3"
        android:layout_centerHorizontal="true"
        >
        <psb.com.customView.CustomTextViewBold
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textColor="@color/brown_3"
            android:text="تایید"
            android:gravity="center"
            android:layout_margin="5dp"
            android:stateListAnimator="@null"
            android:textSize="12sp"
            android:visibility="gone"
            />

        <psb.com.customView.CustomTextViewBold
            android:id="@+id/button5"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/button4"
            android:textColor="@color/brown_3"
            android:stateListAnimator="@null"
            android:gravity="center"
            android:text="انصراف"
            android:layout_margin="5dp"
            android:textSize="12sp"
            android:visibility="gone"
            />
    </RelativeLayout>

    <psb.com.customView.CButton
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_rect"
        android:paddingBottom="@dimen/space_small"
        android:text="تایید"
        android:textColor="@color/white_1"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>