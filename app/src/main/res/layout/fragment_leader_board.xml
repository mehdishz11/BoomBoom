<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".competition.paints.FragmentPaints">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue_2"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.9">

                        <psb.com.kidpaint.utils.customView.GlowRotateView
                            android:id="@+id/bgr_glow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"

                            android:background="@drawable/glow_overlay" />

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="65dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ribbon" />

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/img_podium"
                                android:layout_width="200dp"
                                android:layout_height="90dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/podium" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_above="@id/img_podium"
                                android:layout_marginBottom="-40dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="5dp"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="30">

                                    <ImageView
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginBottom="15dp"
                                        android:rotation="-10"
                                        android:src="@drawable/temp_kid_1" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="45">

                                    <ImageView
                                        android:id="@+id/img_winner_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="34dp"
                                        android:paddingRight="10dp"
                                        android:src="@drawable/temp_kid_2" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="25">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginBottom="3dp"
                                        android:layout_marginRight="5dp"
                                        android:rotation="10"
                                        android:src="@drawable/temp_kid_3" />
                                </RelativeLayout>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="65dp"
                                android:rotation="-40"
                                android:src="@drawable/crown"


                                />
                        </RelativeLayout>


                    </RelativeLayout>
                </android.support.design.widget.CollapsingToolbarLayout>



            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_1"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:id="@+id/relUserRank"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@color/md_grey_200">

                    <RelativeLayout
                        android:id="@+id/relUserInfo"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_5">

                        <psb.com.cview.CustomTextViewBold
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/act_user_image"
                            android:layout_marginTop="@dimen/margin_5"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="نام کاربری"
                            android:textColor="@color/blue_3"
                            android:textSize="@dimen/font_size_13" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignBottom="@+id/act_user_image"
                            android:layout_alignLeft="@+id/act_user_image"
                            android:layout_alignRight="@+id/act_user_image"
                            android:layout_alignTop="@+id/act_user_image"
                            android:background="@drawable/circle_blue" />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/act_user_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:padding="5dp"
                            android:src="@drawable/user_empty_gray"
                            android:tint="@color/light_level_0"
                            app:riv_corner_radius="40dp" />

                    </RelativeLayout>




                </RelativeLayout>

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/swipeRefreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/progressBar"
                    android:layout_below="@+id/relUserRank"
                    android:layout_marginTop="@dimen/margin_5">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                </android.support.v4.widget.SwipeRefreshLayout>

                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/emptyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relUserRank"
                    android:layout_marginTop="@dimen/margin_10"

                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="لیست خالی است"
                    android:textSize="@dimen/font_size_14"
                    android:visibility="gone" />


                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/margin_5"
                    android:visibility="gone" />
            </RelativeLayout>

        </android.support.design.widget.CoordinatorLayout>



    </RelativeLayout>











</RelativeLayout>