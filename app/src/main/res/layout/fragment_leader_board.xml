<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".competition.myPaints.FragmentMyPaints">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-80dp"
        android:layout_below="@+id/rel_scoreboard"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="80dp"
            android:clipToPadding="false"
            >
        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/rel_scoreboard"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_gradient_white" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_gradient_white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_scoreboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/brown_3" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:background="@color/brown_3" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_normal"
            android:rotation="-2"
            app:cardBackgroundColor="@color/blue_2"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:alpha="0.5"
                    android:background="@drawable/circle_white"
                    android:rotation="35" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="9dp"
                    android:alpha="0.5"
                    android:background="@drawable/circle_white"
                    android:rotation="70" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/rel_podium"
                    android:layout_alignParentTop="true">

                    <psb.com.kidpaint.utils.customView.GlowRotateView
                        android:id="@+id/bgr_glow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/glow_overlay" />
                </RelativeLayout>


                <psb.com.cview.CustomTextViewBold
                    android:id="@+id/text_user_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/space_small"
                    android:text="بهترین رتبه شما ۱۲۸۵"
                    android:textColor="@color/md_blue_900"
                    android:textSize="@dimen/text_size_normal" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/rel_podium"
                    android:alpha="0.6"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_bgr_podium" />

                <RelativeLayout
                    android:id="@+id/rel_podium"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_below="@+id/text_user_rate"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/img_podium"
                        android:layout_width="200dp"
                        android:layout_height="90dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/podium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_above="@id/img_podium"
                        android:layout_marginBottom="-40dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_winner_2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                app:riv_corner_radius="10dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:rotation="-10"
                                android:src="@drawable/temp_kid_1" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="45">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_winner_1"
                                app:riv_corner_radius="10dp"

                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="34dp"
                                android:paddingRight="10dp"
                                android:src="@drawable/temp_kid_2" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="25">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/img_winner_3"
                                app:riv_corner_radius="10dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="3dp"
                                android:layout_marginRight="5dp"
                                android:rotation="10"
                                android:src="@drawable/temp_kid_3" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="40dp"
                        android:rotation="-40"
                        android:src="@drawable/crown"


                        />

                </RelativeLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <psb.com.cview.CustomTextViewBold
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:text="لیست خالی است"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_5"
        android:visibility="gone" />




</RelativeLayout>