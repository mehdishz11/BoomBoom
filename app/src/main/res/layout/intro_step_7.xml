<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_trans_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <psb.com.cview.SquareRelativeLayout
        android:id="@+id/rel_parent"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="300dp"
        android:alpha="0.95">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/brown_1"
            android:layout_margin="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="40dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_outline_bgr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:riv_border_color="@color/brown_4"
                    app:riv_border_width="1dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/space_normal"
                    android:paddingBottom="2dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="40dp"
                    android:src="@color/white_1"
                    />
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_outline_template"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:riv_border_color="@color/brown_4"
                    app:riv_border_width="2dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/space_normal"
                    android:paddingBottom="2dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="40dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/rel_btns"
                    android:layout_alignRight="@+id/rel_btns"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="20dp"
                        android:src="@color/brown_1"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_btns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >
                    <RelativeLayout
                        android:id="@+id/rel_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <psb.com.cview.CButton
                            android:id="@+id/btn_delete"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/btn_sqr_green"
                            android:textColor="@color/white_1"
                            android:textSize="@dimen/text_size_normal"
                            />

                        <psb.com.cview.IconFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_1"
                            android:textSize="20dp"
                            android:layout_centerInParent="true"
                            android:text=""
                            android:elevation="5dp"
                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rel_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rel_delete"
                        >
                        <psb.com.cview.CButton
                            android:id="@+id/btn_edit"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/btn_sqr_green"
                            android:textColor="@color/white_1"
                            android:textSize="@dimen/text_size_normal"
                            />

                        <psb.com.cview.IconFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_1"
                            android:textSize="20dp"
                            android:layout_centerInParent="true"
                            android:text=""
                            android:elevation="5dp"
                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rel_competition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rel_edit"
                        android:layout_marginLeft="@dimen/space_small">
                        <psb.com.cview.CButton
                            android:id="@+id/btn_competition"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/btn_sqr_green"
                            android:textColor="@color/white_1"
                            android:textSize="@dimen/text_size_normal"
                            />

                        <psb.com.cview.IconFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_1"
                            android:textSize="20dp"
                            android:layout_centerInParent="true"
                            android:text=""
                            android:elevation="5dp"
                            />
                    </RelativeLayout>

                </RelativeLayout>



            </RelativeLayout>



        </android.support.v7.widget.CardView>


        <ImageView
            android:id="@+id/img_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />
    </psb.com.cview.SquareRelativeLayout>

    <LinearLayout
        android:id="@+id/rel_btn"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rel_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_normal"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/space_15">

        <psb.com.cview.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white_1"
            android:textSize="@dimen/text_size_large"
            android:text="با هر نقاشی می تونی کارهای زیر رو انجام بدی"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_delete1"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/space_normal"

                android:layout_height="wrap_content">
                <psb.com.cview.CButton
                    android:id="@+id/btn_delete1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_sqr_green"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/text_size_normal"
                    />

                <psb.com.cview.IconFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_1"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:elevation="5dp"
                    />
            </RelativeLayout>


            <psb.com.cview.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rel_delete1"
                android:textColor="@color/white_1"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_large"
                android:text="@string/intro_step_7_delete"
                android:layout_marginLeft="10dp"
                android:gravity="right|center"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/space_small"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_edit1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_normal"

                >
                <psb.com.cview.CButton
                    android:id="@+id/btn_edit1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_sqr_green"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/text_size_normal"
                    />

                <psb.com.cview.IconFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_1"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:elevation="5dp"
                    />
            </RelativeLayout>



            <psb.com.cview.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rel_edit1"
                android:textColor="@color/white_1"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_large"
                android:text="@string/intro_step_7_edit"
                android:layout_marginLeft="10dp"
                android:gravity="right|center"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/space_small"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_competition1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/space_normal"
                >
                <psb.com.cview.CButton
                    android:id="@+id/btn_competition1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_sqr_green"
                    android:textColor="@color/white_1"
                    android:textSize="@dimen/text_size_normal"
                    />

                <psb.com.cview.IconFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_1"
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:elevation="5dp"
                    />
            </RelativeLayout>



            <psb.com.cview.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rel_competition1"
                android:textColor="@color/white_1"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_large"
                android:text="@string/intro_step_7_competition"
                android:layout_marginLeft="5dp"
                android:gravity="right|center"
                />


        </RelativeLayout>








    </LinearLayout>



</RelativeLayout>